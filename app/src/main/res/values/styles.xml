<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:paddingLeft">@dimen/padding_left</item>
        <item name="android:textSize">@dimen/body</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:buttonTint">@color/light_grey</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:paddingLeft">@dimen/padding_left</item>
        <item name="android:textSize">@dimen/body</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:buttonTint">@color/light_grey</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textSize">@dimen/body</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textSize">@dimen/body</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="LinearLayoutHorizontal">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="LinearLayoutVertical">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="LinearLayoutMain">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>

    <style name="GetScoreButton">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/margin_large</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/padding_button</item>
    </style>

    <style name="TitleStyle">
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
